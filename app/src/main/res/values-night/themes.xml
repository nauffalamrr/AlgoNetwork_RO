<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.RouteOptimization" parent="Theme.Material3.Light">

        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>

        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:statusBarColor">@color/green</item>
        <item name="colorOnSurface">@color/white</item>

        <item name="bottomNavigationStyle">@style/Widget.App.BottomNavigationView</item>

        <item name="cardViewStyle">@style/Base.App.CardView</item>
    </style>

    <style name="Theme.RouteOptimization" parent="Base.Theme.RouteOptimization" />

    <style name="Widget.App.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="backgroundTint">@color/green</item>
        <item name="itemTextColor">?attr/colorOnSurface</item>
        <item name="itemIconTint">?attr/colorOnSurface</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
    </style>

    <style name="Base.App.CardView" parent="Base.CardView">
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardElevation">4dp</item>
        <item name="cardCornerRadius">20dp</item>
    </style>

    <style name="Base.App.Button" parent="Widget.AppCompat.Button">
        <item name="android:background">@color/green</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>